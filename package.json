{
  "name": "pluto-notebook",
  "displayName": "Pluto Notebook",
  "description": "VSCode extension for Julia Pluto notebooks",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Notebooks"
  ],
  "activationEvents": [
    "onNotebook:pluto-notebook"
  ],
  "main": "./dist/extension.cjs",
  "contributes": {
    "configuration": {
      "title": "Pluto Notebook",
      "properties": {
        "pluto-notebook.port": {
          "type": "number",
          "default": 1234,
          "description": "Port number for the Pluto server"
        }
      }
    },
    "notebooks": [
      {
        "type": "pluto-notebook",
        "displayName": "Pluto Notebook",
        "selector": [
          {
            "filenamePattern": "*.dyad.jl"
          }
        ]
      }
    ],
    "notebookRenderer": [
      {
        "id": "pluto-output-renderer",
        "displayName": "Pluto Output Renderer",
        "entrypoint": "./dist/renderer.js",
        "mimeTypes": [
          "x-application/pluto-output"
        ],
        "requiresMessaging": "optional"
      }
    ],
    "commands": [
      {
        "command": "pluto-notebook.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "pluto-notebook.startServer",
        "title": "Pluto: Start Server"
      },
      {
        "command": "pluto-notebook.stopServer",
        "title": "Pluto: Stop Server"
      },
      {
        "command": "pluto-notebook.restartServer",
        "title": "Pluto: Restart Server"
      },
      {
        "command": "pluto-notebook.getMCPServerPath",
        "title": "Pluto: Get MCP Server Path"
      },
      {
        "command": "pluto-notebook.createProjectMCPConfig",
        "title": "Pluto: Create MCP Config for Project"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "mcp": "node dist/mcp-server.cjs",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mathjax": "^0.0.40",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@types/vscode-notebook-renderer": "^1.72.4",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@plutojl/rainbow": "^0.6.2",
    "jsdom": "^27.0.0",
    "mathjax": "^3.0.0"
  }
}
